@{
    ViewBag.Title = "Retirement Plan";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet" />
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            background: url('https://media.istockphoto.com/id/465887840/photo/retirement.jpg?s=612x612&w=0&k=20&c=QtMzzhYt5bCDJGAB2hecLbUoz3nOYIi_trYgX8OKEUw=') no-repeat center center fixed;
            background-size: cover; /* Ensures the image covers the entire background */
            color: #333;
            padding: 100px 0; /* Adjust top and bottom padding */
        }

        .content-container {
            max-width: 600px; /* Set a maximum width */
            margin: 50px auto; /* Center the container */
            padding: 30px;
            background: rgba(255, 255, 255, 0.9); /* Slightly transparent white */
            border-radius: 20px; /* Rounded corners */
            box-shadow: 0 8px 30px rgba(0, 0, 0, 0.3); /* Deep shadow */
            transition: transform 0.3s; /* Smooth transition */
        }

            .content-container:hover {
                transform: scale(1.02); /* Slight scale effect on hover */
            }

        h2 {
            text-align: center;
            color: #0056b3;
            margin-bottom: 20px;
        }

        .plan-button {
            background-color: #0056b3;
            color: white;
            padding: 15px;
            border: none;
            border-radius: 8px; /* Rounded corners */
            cursor: pointer;
            font-size: 1rem;
            width: 100%;
            margin-bottom: 10px;
            transition: background-color 0.3s, transform 0.3s; /* Smooth transition */
            display: flex; /* Use flex for icon and text alignment */
            align-items: center; /* Center align items vertically */
        }

            .plan-button:hover {
                background-color: #004494;
                transform: translateY(-2px); /* Button lift effect on hover */
            }

            .plan-button i {
                margin-right: 10px; /* Space between icon and text */
            }

        .back-button {
            background-color: #dc3545;
            color: white;
            padding: 10px;
            border: none;
            border-radius: 8px; /* Rounded corners */
            cursor: pointer;
            font-size: 1rem;
            width: 100%;
            margin-top: 20px;
            transition: background-color 0.3s, transform 0.3s; /* Smooth transition */
        }

            .back-button:hover {
                background-color: #c82333;
                transform: translateY(-2px); /* Button lift effect on hover */
            }
    </style>
</head>
<body>
    <div class="content-container">
        <h2 style="display: flex; align-items: center; justify-content: center;">
            <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQPlbbhrv4Vyrif30urzYpTvYBHX_eZuyALyw&sg" alt="Surya Banking Logo" style="height: 80px; margin-right: 10px;" />
            Surya Banking Services
        </h2>
        <h2>Retirement Plans</h2>

        <div>
            <p>Choose from our various retirement plans tailored to meet your needs:</p>
            <button class="plan-button" onclick="location.href='@Url.Action("BasicPlan", "RetirnmentPlan")'">
                <i class="fas fa-calendar-alt"></i> Plan A: Basic Retirement Plan
            </button>
            <button class="plan-button" onclick="location.href='@Url.Action("EnhancePlan", "RetirnmentPlan")'">
                <i class="fas fa-star"></i> Plan B: Enhanced Retirement Plan
            </button>
            <button class="plan-button" onclick="location.href='@Url.Action("PremiumPlan", "RetirnmentPlan")'">
                <i class="fas fa-gem"></i> Plan C: Premium Retirement Plan
            </button>
        </div>

        <button class="back-button" onclick="location.href='@Url.Action("Index", "Home/ContentPage")'">
            <i class="fas fa-arrow-left"></i> Back to Home
        </button>
    </div>
</body>
</html>
