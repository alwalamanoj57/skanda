@{
    ViewBag.Title = "Investment Options";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet" />
    <style>
        body {
            background: url('https://www.shutterstock.com/image-illustration/blue-money-business-graph-finance-260nw-2166540277.jpg') no-repeat center center fixed;
            background-size: cover;
            color: #333;
        }

        .container {
            max-width: 600px; /* Set maximum width */
            margin: 50px auto; /* Center container */
            padding: 30px;
            background: rgba(255, 255, 255, 0.9);
            border-radius: 20px; /* Increased roundness */
            box-shadow: 0 8px 30px rgba(0, 0, 0, 0.3); /* Deeper shadow */
            transition: transform 0.3s; /* Smooth transition */
        }

            .container:hover {
                transform: scale(1.02); /* Slight scale effect on hover */
            }

        h2 {
            text-align: center;
            margin-bottom: 30px;
            color: #0056b3;
            font-weight: bold; /* Bold text */
        }

        .list-group-item {
            border: none;
            margin-bottom: 15px;
            text-align: center; /* Center text in the list item */
        }

        .btn {
            width: 100%;
            font-size: 1.1rem;
            padding: 15px;
            position: relative;
            border-radius: 8px; /* Rounded corners for buttons */
            transition: background-color 0.3s, transform 0.3s; /* Smooth transition */
        }

            .btn:hover {
                transform: translateY(-2px); /* Button lift effect on hover */
            }

            .btn i {
                margin-right: 10px; /* Space between icon and text */
            }
    </style>
</head>
<body>
    <div class="container">
        <h2 style="display: flex; align-items: center; justify-content: center;">
            <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQPlbbhrv4Vyrif30urzYpTvYBHX_eZuyALyw&sg" alt="Surya Banking Logo" style="height: 80px; margin-right: 10px;" />
            Surya Banking Services
        </h2>
        <h2>@ViewBag.Title</h2>
        <ul class="list-group">
            <li class="list-group-item">
                <a href="@Url.Action("MutualFund", "Investment")" class="btn btn-primary">
                    <i class="fas fa-chart-pie"></i> Invest in Mutual Funds
                </a>
            </li>
            <li class="list-group-item">
                <a href="@Url.Action("StockInvestments", "Investment")" class="btn btn-success">
                    <i class="fas fa-dollar-sign"></i> Invest in Stocks
                </a>
            </li>
            <li class="list-group-item">
                <a href="@Url.Action("BondInvestments", "Investment")" class="btn btn-info">
                    <i class="fas fa-university"></i> Invest in Bonds
                </a>
            </li>
            <li class="list-group-item">
                <a href="@Url.Action("Index", "Home/ContentPage")" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Back
                </a>
            </li>
        </ul>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
