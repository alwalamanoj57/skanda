@{
    ViewBag.Title = "Welcome";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            height: 100vh;
            margin: 0;
            background: url('https://png.pngtree.com/thumb_back/fh260/background/20231006/pngtree-secure-online-banking-and-mobile-payment-illustration-of-money-transfer-deposit-image_13548646.png') no-repeat center center fixed;
            background-size: cover;
            color: #ffffff;
            text-align: center;
            position: relative;
        }

        .overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.6);
            z-index: 1;
        }

        h1 {
            position: absolute;
            top: 20px;
            left: 50%;
            transform: translateX(-50%);
            margin-bottom: 10px;
            font-size: 3rem;
            font-weight: 700;
            white-space: nowrap;
            background: linear-gradient(to right, #ff0080, #ff8c00, #00ff88);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            text-shadow: 0 0 15px rgba(255, 0, 128, 0.8), 0 0 30px rgba(255, 140, 0, 0.5);
            padding: 15px;
            border-radius: 8px;
            z-index: 2;
        }

        .button-container {
            position: absolute;
            top: 100px;
            right: 20px;
            display: flex;
            flex-direction: column;
            gap: 15px;
            z-index: 2;
        }

        .button {
            padding: 15px;
            border: none;
            border-radius: 5px;
            background-color: #007bff;
            color: white;
            font-size: 1.2rem;
            cursor: pointer;
            transition: background-color 0.3s, transform 0.3s;
            width: 300px; /* Set a fixed width for buttons */
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.5);
            position: relative;
        }

            .button:hover {
                background-color: #0056b3;
                transform: translateY(-3px);
            }

        .icon {
            margin-right: 10px;
        }

        .footer {
            position: absolute;
            bottom: 20px;
            right: 20px;
            font-size: 0.9rem;
            color: #ffcc00;
        }

        .info-section {
            position: absolute;
            top: 150px;
            left: 50%;
            transform: translateX(-50%);
            z-index: 2;
            max-width: 600px;
            padding: 20px;
            background: rgba(0, 0, 0, 0.8);
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.5);
        }

            .info-section h2 {
                font-size: 2rem;
                margin-bottom: 10px;
            }

            .info-section p {
                font-size: 1.1rem;
                margin-bottom: 10px;
            }

            .info-section ul {
                text-align: left;
                list-style: none;
                padding: 0;
            }

                .info-section ul li {
                    margin: 5px 0;
                    font-size: 1.1rem;
                }

        .image-gallery {
            display: flex;
            justify-content: center;
            flex-wrap: wrap;
            gap: 20px;
            margin-top: 70px;
            z-index: 2;
        }

            .image-gallery img {
                width: 300px;
                height: auto;
                border-radius: 10px;
                box-shadow: 0 4px 10px rgba(0, 0, 0, 0.5);
                transition: transform 0.3s;
            }

                .image-gallery img:hover {
                    transform: scale(1.05);
                }
    </style>
</head>
<body>
    <div class="overlay"></div>

    <div class="button-container">
        <button class="button" onclick="location.href='@Url.Action("", "Home/Signup")'">
            <i class="fas fa-user-plus icon"></i> Signup
        </button>
        <button class="button" onclick="location.href='@Url.Action("", "AdminLogin/Login")'">
            <i class="fas fa-user-shield icon"></i> Admin Login
        </button>
        <button class="button" onclick="location.href='@Url.Action("", "UserLogin/ULogin")'">
            <i class="fas fa-sign-in-alt icon"></i> User Login
        </button>
    </div>

    <h1 style="position: absolute; top: 10px;">
        <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQPlbbhrv4Vyrif30urzYpTvYBHX_eZuyALyw&sg" alt="Surya Banking Logo" style="height: 80px; margin-right: 10px; vertical-align: middle;" />
        Welcome to Surya Banking
    </h1>

    <div class="info-section">
        <h2>About Surya Banking</h2>
        <p>Your trusted partner in financial services. We offer a range of banking solutions tailored to meet your needs, from personal banking to business solutions.</p>
        <p>Experience seamless transactions, personalized customer service, and innovative banking products designed to empower you.</p>
        <h2>Features:</h2>
        <ul>
            <li>✔️ Online Banking</li>
            <li>✔️ Mobile App for Easy Access</li>
            <li>✔️ 24/7 Customer Support</li>
            <li>✔️ Secure Transactions</li>
            <li>✔️ Investment Opportunities</li>
        </ul>
        <p>Join us today and take the first step towards a secure financial future!</p>
    </div>

    <div class="footer">
        &copy; 2024 Surya Bank. All rights reserved.
    </div>
</body>
</html>
