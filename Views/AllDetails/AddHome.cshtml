@model surya_banking_application_Altura_sphere.Models.HomeLoan
@{
    ViewBag.Title = "Home Loan Application Form";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <style>
        body {
            background-color: #f8f9fa;
            font-family: Arial, sans-serif;
        }

        h2 {
            margin-top: 20px;
            color: #343a40;
            font-weight: bold;
        }

        .form-container {
            margin: 20px auto;
            padding: 20px;
            background-color: white;
            border-radius: 8px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }

        .table th {
            background-color: #007bff;
            color: white;
        }

        .table th, .table td {
            padding: 15px;
            text-align: left;
        }

        .action-link {
            text-align: center;
            margin-bottom: 20px;
        }

        .btn-submit {
            background-color: #28a745;
            color: white;
            font-weight: bold;
        }

            .btn-submit:hover {
                background-color: #218838;
            }

        .text-danger {
            font-size: 0.9em;
        }
    </style>
</head>
<body>
    <div class="container form-container">
        <h2 class="text-center">Home Loan Application Form</h2>
        <div class="action-link">
            @Html.ActionLink("Back", "DisplayHomeLoan", null, new { @class = "btn btn-secondary" })
        </div>
        @using (Html.BeginForm())
        {
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <table class="table table-bordered">
                <tr>
                    <th>Full Name</th>
                    <td>
                        @Html.TextBoxFor(model => model.Full_Name, new { @class = "form-control", @required = "required", @placeholder = "Enter your full name" })
                        @Html.ValidationMessageFor(model => model.Full_Name, "", new { @class = "text-danger" })
                    </td>
                </tr>
                <tr>
                    <th>Email</th>
                    <td>
                        @Html.TextBoxFor(model => model.Email, new { @class = "form-control", @required = "required", @placeholder = "Enter your email" })
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                    </td>
                </tr>
                <tr>
                    <th>Phone</th>
                    <td>
                        @Html.TextBoxFor(model => model.Phone_number, new { @class = "form-control", @required = "required", @placeholder = "Enter your phone number" })
                        @Html.ValidationMessageFor(model => model.Phone_number, "", new { @class = "text-danger" })
                    </td>
                </tr>
                <tr>
                    <th>Loan Amount</th>
                    <td>
                        @Html.TextBoxFor(model => model.laon_amount, new { @class = "form-control", @required = "required", @placeholder = "Enter loan amount" })
                        @Html.ValidationMessageFor(model => model.laon_amount, "", new { @class = "text-danger" })
                    </td>
                </tr>
                <tr>
                    <th>Loan Term (Years)</th>
                    <td>
                        @Html.TextBoxFor(model => model.loan_term, new { @class = "form-control", @required = "required", @placeholder = "Enter loan term in years" })
                        @Html.ValidationMessageFor(model => model.loan_term, "", new { @class = "text-danger" })
                    </td>
                </tr>
                <tr>
                    <th>Additional Information</th>
                    <td>
                        @Html.TextBoxFor(model => model.additional_info, new { @class = "form-control", @placeholder = "Enter any additional information" })
                        @Html.ValidationMessageFor(model => model.additional_info, "", new { @class = "text-danger" })
                    </td>
                </tr>
                <tr>
                    <th>@ViewBag.Message</th>
                    <td>
                        <input type="submit" name="B1" value="Apply" class="btn btn-submit" />
                    </td>
                </tr>
            </table>
        }
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    @*<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>*@
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
