@using surya_banking_application_Altura_sphere.Models
@{
    ViewBag.Title = " Delete Account Details";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
    <link href="~/Content/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            background: linear-gradient(135deg, #6e7dff, #a8c0ff);
            color: #333;
            padding: 20px;
        }

        h2 {
            text-align: center;
            color: #0056b3;
            margin-bottom: 30px;
            animation: fadeIn 1s ease-in;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin: 0 auto;
            background-color: #fff;
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        }

        th, td {
            padding: 5px;
            text-align: left;
            border: 1px solid #e0e0e0;
            transition: background-color 0.3s;
        }

        th {
            background-color: #0056b3;
            color: white;
        }

        tr:hover {
            background-color: #f1f1f1;
        }

        .action-links a {
            text-decoration: none;
            color: #0056b3;
            padding: 5px 10px;
            border-radius: 5px;
            transition: background-color 0.3s, color 0.3s;
        }

            .action-links a:hover {
                background-color: #e0e0e0;
                color: #003f80;
            }

        .add-account {
            margin: 20px 0;
            display: block;
            text-align: center;
            font-weight: bold;
            font-size: 1.2rem;
            color: #0056b3;
            transition: color 0.3s;
        }

            .add-account:hover {
                color: #003f80;
                text-decoration: underline;
            }

        keyframes fadeIn {
            from

        {
            opacity: 0;
        }

        to {
            opacity: 1;
        }
        }
    </style>
</head>
<body>
    <h2>Delete Account Details</h2>
    <div>
        @using (Html.BeginForm())
        {
            <p class="Back-Page" align="center">@Html.ActionLink("Back to Main Page", "AllViews")</p>
            <table>
                <thead>
                    <tr>
                        <th>Deleted Account Id</th>
                        <th>Account Id</th>
                        <th>Account Number</th>
                        <th>Email</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Phone Number</th>
                        <th>Address</th>
                        <th>City</th>
                        <th>State</th>
                        <th>Country</th>
                        <th>Account Deleted Date</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (DeletedAccounts DC in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(model => DC.DeletedAccountId)</td>
                            <td>@Html.DisplayFor(model => DC.AccountId)</td>
                            <td>@Html.DisplayFor(model => DC.AccountNumber)</td>
                            <td>@Html.DisplayFor(model => DC.Email)</td>
                            <td>@Html.DisplayFor(model => DC.FirstName)</td>
                            <td>@Html.DisplayFor(model => DC.LastName)</td>
                            <td>@Html.DisplayFor(model => DC.PhoneNumber)</td>
                            <td>@Html.DisplayFor(model => DC.Addres)</td>
                            <td>@Html.DisplayFor(model => DC.City)</td>
                            <td>@Html.DisplayFor(model => DC.States)</td>
                            <td>@Html.DisplayFor(model => DC.Country)</td>
                            <td>@Html.DisplayFor(model => DC.DeletedAt)</td>
                            <td class="action-links">
                                @Html.ActionLink("View", "ViewDeleteAccount", new { @Id = DC.DeletedAccountId }) |
                                @Html.ActionLink("Delete", "DeleteAccountDetails", new { @Id = DC.DeletedAccountId })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</body>
</html>
