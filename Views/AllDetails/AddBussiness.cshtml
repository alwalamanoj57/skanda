@model surya_banking_application_Altura_sphere.Models.BusinessLoan
@{
    ViewBag.Title = "Add Business Loan";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <style>
        body {
            background-color: #f8f9fa;
            font-family: Arial, sans-serif;
        }

        h2 {
            margin-top: 20px;
            color: #343a40;
            font-weight: bold;
        }

        .form-container {
            margin: 20px auto;
            padding: 20px;
            background-color: white;
            border-radius: 8px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }

        .table th {
            background-color: #007bff;
            color: white;
        }

        .table th, .table td {
            padding: 15px;
            text-align: left;
        }

        .action-link {
            text-align: center;
            margin-bottom: 20px;
        }

        .btn-submit {
            background-color: #28a745;
            color: white;
            font-weight: bold;
        }

            .btn-submit:hover {
                background-color: #218838;
            }

        .text-danger {
            font-size: 0.9em;
        }
    </style>
</head>
<body>
    <div class="container form-container">
        <h2 class="text-center">Business Loan Registration</h2>
        <div class="action-link">
            @Html.ActionLink("Back", "DisplayBussiness", null, new { @class = "btn btn-secondary" })
        </div>
        @using (Html.BeginForm())
        {
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <table class="table table-bordered">
                <tr>
                    <th>Borrower Name</th>
                    <td>
                        @Html.TextBoxFor(model => model.BorrowerName, new { @class = "form-control", required = "required", placeholder = "Enter borrower name" })
                        @Html.ValidationMessageFor(model => model.BorrowerName, "", new { @class = "text-danger" })
                    </td>
                </tr>
                <tr>
                    <th>Business Name</th>
                    <td>
                        @Html.TextBoxFor(model => model.BusinessName, new { @class = "form-control", required = "required", placeholder = "Enter business name" })
                        @Html.ValidationMessageFor(model => model.BusinessName, "", new { @class = "text-danger" })
                    </td>
                </tr>
                <tr>
                    <th>Loan Amount</th>
                    <td>
                        @Html.TextBoxFor(model => model.LoanAmount, new { @class = "form-control", required = "required", placeholder = "Enter loan amount" })
                        @Html.ValidationMessageFor(model => model.LoanAmount, "", new { @class = "text-danger" })
                    </td>
                </tr>
                <tr>
                    <th>Interest Rate</th>
                    <td>
                        @Html.TextBoxFor(model => model.InterestRate, new { @class = "form-control", required = "required", placeholder = "Enter interest rate" })
                        @Html.ValidationMessageFor(model => model.InterestRate, "", new { @class = "text-danger" })
                    </td>
                </tr>
                <tr>
                    <th>Loan Term</th>
                    <td>
                        @Html.TextBoxFor(model => model.LoanTerm, new { @class = "form-control", required = "required", placeholder = "Enter loan term" })
                        @Html.ValidationMessageFor(model => model.LoanTerm, "", new { @class = "text-danger" })
                    </td>
                </tr>
                <tr>
                    <th>Monthly Payment</th>
                    <td>
                        @Html.TextBoxFor(model => model.MonthlyPayment, new { @class = "form-control", required = "required", placeholder = "Enter monthly payment" })
                        @Html.ValidationMessageFor(model => model.MonthlyPayment, "", new { @class = "text-danger" })
                    </td>
                </tr>
                <tr>
                    <th>Start Date</th>
                    <td>
                        @Html.TextBoxFor(model => model.StartDate, new { @class = "form-control", type = "date" })
                        @Html.ValidationMessageFor(model => model.StartDate, "", new { @class = "text-danger" })
                    </td>
                </tr>
                <tr>
                    <th>Purpose</th>
                    <td>
                        @Html.TextBoxFor(model => model.Purpose, new { @class = "form-control", required = "required", placeholder = "Enter purpose of the loan" })
                        @Html.ValidationMessageFor(model => model.Purpose, "", new { @class = "text-danger" })
                    </td>
                </tr>
                <tr>
                    <th>
                        @ViewBag.Message
                    </th>
                    <td>
                        <input type="submit" name="B1" value="Add" class="btn btn-submit" />
                    </td>
                </tr>
            </table>
        }
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
