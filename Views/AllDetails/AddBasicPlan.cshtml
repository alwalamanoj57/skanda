@model surya_banking_application_Altura_sphere.Models.BasicPlan
@{
    ViewBag.Title = "AddBasicPlan";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <style>
        body {
            background-color: #eef2f3;
            font-family: 'Arial', sans-serif;
        }

        h2 {
            margin-top: 20px;
            color: #333;
            font-weight: bold;
        }

        .container {
            margin: 20px auto;
            padding: 20px;
            background-color: white;
            border-radius: 8px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        }

        .action-link {
            text-align: center;
            margin-bottom: 20px;
        }

        .text-danger {
            font-size: 0.9em;
        }
    </style>
</head>
<body>
    <div class="container">
        <h2 class="text-center">Basic Plan Registration Form</h2>
        <div class="action-link">
            <p>@Html.ActionLink("Back", "AllDetailsBasicPlan", null, new { @class = "btn btn-secondary" })</p>
        </div>
        @using (Html.BeginForm())
        {
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <table class="table table-bordered">
                <tr>
                    <th>First Name</th>
                    <td>
                        @Html.TextBoxFor(model => model.FirstName, new { @class = "form-control", required = "required", placeholder = "Enter first name" })
                        @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
                    </td>
                </tr>
                <tr>
                    <th>Last Name</th>
                    <td>
                        @Html.TextBoxFor(model => model.LastName, new { @class = "form-control", required = "required", placeholder = "Enter last name" })
                        @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
                    </td>
                </tr>
                <tr>
                    <th>Email</th>
                    <td>
                        @Html.TextBoxFor(model => model.Email, new { @class = "form-control", required = "required", placeholder = "Enter email" })
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                    </td>
                </tr>
                <tr>
                    <th>Phone Number</th>
                    <td>
                        @Html.TextBoxFor(model => model.PhoneNumber, new { @class = "form-control", required = "required", placeholder = "Enter phone number" })
                        @Html.ValidationMessageFor(model => model.PhoneNumber, "", new { @class = "text-danger" })
                    </td>
                </tr>
                <tr>
                    <th>Age</th>
                    <td>
                        @Html.TextBoxFor(model => model.Age, new { @class = "form-control", required = "required", placeholder = "Enter Your Age" })
                        @Html.ValidationMessageFor(model => model.Age, "", new { @class = "text-danger" })
                    </td>
                </tr>
                <tr>
                    <th>Job</th>
                    <td>
                        @Html.TextBoxFor(model => model.Job, new { @class = "form-control", required = "required", placeholder = "Enter Your Designation" })
                        @Html.ValidationMessageFor(model => model.Job, "", new { @class = "text-danger" })
                    </td>
                </tr>
                <tr>
                    <th>Monthly Payment</th>
                    <td>
                        @Html.TextBoxFor(model => model.MonthlyPayment, new { @class = "form-control", required = "required", placeholder = "Monthly Payment", type = "number", step = "0.01" })
                        @Html.ValidationMessageFor(model => model.MonthlyPayment, "", new { @class = "text-danger" })
                    </td>
                </tr>
                <tr>
                    <th>Working Years</th>
                    <td>
                        @Html.TextBoxFor(model => model.Working_Year, new { @class = "form-control", required = "required", placeholder = "Enter Working Years" })
                        @Html.ValidationMessageFor(model => model.Working_Year, "", new { @class = "text-danger" })
                    </td>
                </tr>
                <tr>
                    <th>Created At</th>
                    <td>
                        @Html.TextBoxFor(model => model.CreatedAt, new { @class = "form-control", type = "date", placeholder = "Enter Date" })
                        @Html.ValidationMessageFor(model => model.CreatedAt, "", new { @class = "text-danger" })
                    </td>
                </tr>
                <tr>
                    <th>@ViewBag.Message</th>
                    <td>
                        <input type="submit" value="Add" class="btn btn-primary" />
                    </td>
                </tr>
            </table>
        }
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>

