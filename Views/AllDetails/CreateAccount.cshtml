@model surya_banking_application_Altura_sphere.Models.Accounts
@{
     ViewBag.Title = "Create Account";
  }
 <h2>Create Account Page</h2>
  <style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f4f4f4;
        margin: 0;
        padding: 20px;
    }

    h2 {
        text-align: center;
        color: #333;
    }

    .form-container {
        max-width: 600px;
        margin: auto;
        background: white;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        animation: fadeIn 0.5s ease-in-out;
    }

    table {
        width: 100%;
        border-collapse: collapse;
    }

    th, td {
        padding: 10px;
        text-align: left;
    }

    th {
        background-color: #007BFF;
        color: white;
    }

    input[type="text"], input[type="date"], input[type="tel"], input[type="email"] {
        width: 100%;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 5px;
        transition: border-color 0.3s;
    }

    input[type="text"]:focus, input[type="date"]:focus, input[type="tel"]:focus, input[type="email"]:focus {
        border-color: #007BFF;
    }

    input[type="submit"] {
        background-color: #28a745;
        color: white;
        border: none;
        padding: 10px;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s;
    }

    input[type="submit"]:hover {
        background-color: #218838;
    }

    keyframes fadeIn {
        from { opacity: 0; }
        to { opacity: 1; }
    }

    .validation-message {
        color: red;
        font-size: 0.9em;
    }
            </style>

            <div class="form-container">
                @using (Html.BeginForm())
                {
                    <p>@Html.ActionLink("Back to Accounts page", "AccountDetails")</p>
                    <p>@ViewBag.Message</p>
                    <table>
                        <tr>
                            <th>Enter Email</th>
                            <td>
                                @Html.TextBoxFor(model => model.Email, new { @required = "required", @placeholder = "Email", @type = "email", @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "validation-message" })
                            </td>
                        </tr>
                        <tr>
                            <th>Enter First Name</th>
                            <td>
                                @Html.TextBoxFor(model => model.FirstName, new { @required = "required", @placeholder = "First Name", @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "validation-message" })
                            </td>
                        </tr>
                        <tr>
                            <th>Enter Last Name</th>
                            <td>
                                @Html.TextBoxFor(model => model.LastName, new { @required = "required", @placeholder = "Last Name", @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "validation-message" })
                            </td>
                        </tr>
                        <tr>
                            <th>Enter Phone Number</th>
                            <td>
                                @Html.TextBoxFor(model => model.PhoneNumber, new { @required = "required", @placeholder = "Phone Number", @type = "tel", @pattern = @"\d{10}", @class = "form-control" })
                                <span class="validation-message">Format: 10 digits</span>
                                @Html.ValidationMessageFor(model => model.PhoneNumber, "", new { @class = "validation-message" })
                            </td>
                        </tr>
                        <tr>
                            <th>Enter Address</th>
                            <td>
                                @Html.TextBoxFor(model => model.Addres, new { @required = "required", @placeholder = "Address", @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Addres, "", new { @class = "validation-message" })
                            </td>
                        </tr>
                        <tr>
                            <th>Enter City</th>
                            <td>
                                @Html.TextBoxFor(model => model.City, new { @required = "required", @placeholder = "City", @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.City, "", new { @class = "validation-message" })
                            </td>
                        </tr>
                        <tr>
                            <th>Enter State</th>
                            <td>
                                @Html.TextBoxFor(model => model.States, new { @required = "required", @placeholder = "State", @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.States, "", new { @class = "validation-message" })
                            </td>
                        </tr>
                        <tr>
                            <th>Enter Country</th>
                            <td>
                                @Html.TextBoxFor(model => model.Country, new { @required = "required", @placeholder = "Country", @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Country, "", new { @class = "validation-message" })
                            </td>
                        </tr>
                        <tr>
                            <th>Enter Date</th>
                            <td>
                                @Html.TextBoxFor(model => model.CreatedAt, new { @required = "required", @placeholder = "YYYY-MM-DD", @type = "date", @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.CreatedAt, "", new { @class = "validation-message" })
                            </td>
                        </tr>
                        <tr>
                            <th>@ViewBag.Message</th>
                            <td><input type="submit" name="B1" value="Create" /></td>
                        </tr>
                    </table>
                }
            </div>

            <script>
    // Optional: You can add JavaScript to enhance validation messages or handle form submission
    document.querySelector("form").addEventListener("submit", function(event) {
        // Custom validation logic can be added here
    });
            </script>

