@model surya_banking_application_Altura_sphere.Models.StockInvestments
@{
    ViewBag.Title = "ViewStock";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <style>
        body {
            background-color: #eef2f3;
            font-family: 'Arial', sans-serif;
        }

        h2 {
            margin-top: 20px;
            color: #333;
            font-weight: bold;
        }

        .container {
            margin: 20px auto;
            padding: 20px;
            background-color: white;
            border-radius: 8px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        }

        .action-link {
            text-align: center;
            margin-bottom: 20px;
        }

        .text-danger {
            font-size: 0.9em;
        }
    </style>
</head>
<body>
    <div class="container">
        <h2 class="text-center">View Details</h2>
        <div class="action-link">
            <p>@Html.ActionLink("Back", "AllDetailsStock", null, new { @class = "btn btn-secondary" })</p>
        </div>
        @using (Html.BeginForm())
        {
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <table class="table table-bordered">
        <tr>
            <th>Stock Name</th>
            <td>
                @Html.DisplayFor(model => model.StockName, new { @class = "form-control", required = "required", placeholder = "Enter Stock name" })
            </td>
        </tr>
        <tr>
            <th>First Name</th>
            <td>
                @Html.DisplayFor(model => model.FirstName, new { @class = "form-control", required = "required", placeholder = "Enter first name" })
            </td>
        </tr>
        <tr>
            <th>Last Name</th>
            <td>
                @Html.DisplayFor(model => model.LastName, new { @class = "form-control", required = "required", placeholder = "Enter last name" })
            </td>
        </tr>
        <tr>
            <th>Email</th>
            <td>
                @Html.DisplayFor(model => model.Email, new { @class = "form-control", required = "required", placeholder = "Enter email" })
            </td>
        </tr>
        <tr>
            <th>Phone</th>
            <td>
                @Html.DisplayFor(model => model.Phone, new { @class = "form-control", required = "required", placeholder = "Enter phone number" })
            </td>
        </tr>
        <tr>
            <th>Amount Invested</th>
            <td>
                @Html.DisplayFor(model => model.AmountInvested, new { @class = "form-control", required = "required", placeholder = "Enter amount invested", type = "number", step = "0.01" })
            </td>
        </tr>
        <tr>
            <th>Shares</th>
            <td>
                @Html.DisplayFor(model => model.Shares, new { @class = "form-control", required = "required", placeholder = "Enter Shares" })
            </td>
        </tr>
        <tr>
            <th>Expected Return</th>
            <td>
                @Html.DisplayFor(model => model.ExpectedReturn, new { @class = "form-control", required = "required", placeholder = "Enter expected return", type = "number", step = "0.01" })
            </td>
        </tr>
        <tr>
            <th>Created At</th>
            <td>
                @Html.DisplayFor(model => model.CreatedAt, new { @class = "form-control", type = "date" })
            </td>
        </tr>
        <tr>
            <th>Status</th>
            <td>@Html.DisplayFor(model => model.status)</td>
        </tr>
    </table>
        }
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>


