@model surya_banking_application_Altura_sphere.Models.BondInvestments
@{
    ViewBag.Title = "AddBond";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <style>
        body {
            background-color: #eef2f3;
            font-family: 'Arial', sans-serif;
        }

        h2 {
            margin-top: 20px;
            color: #333;
            font-weight: bold;
        }

        .container {
            margin: 20px auto;
            padding: 20px;
            background-color: white;
            border-radius: 8px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        }

        .action-link {
            text-align: center;
            margin-bottom: 20px;
        }

        .text-danger {
            font-size: 0.9em;
        }
    </style>
</head>
<body>
    <div class="container">
        <h2 class="text-center">Bond Investment Registration</h2>
        <div class="action-link">
            <p>@Html.ActionLink("Back", "AllDetailsBond", null, new { @class = "btn btn-secondary" })</p>
        </div>
        @using (Html.BeginForm())
        {
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <table class="table table-bordered">
                <tr>
                    <th>First Name</th>
                    <td>
                        @Html.TextBoxFor(model => model.FirstName, new { @class = "form-control", required = "required", placeholder = "Enter first name" })
                        @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
                    </td>
                </tr>
                <tr>
                    <th>Last Name</th>
                    <td>
                        @Html.TextBoxFor(model => model.LastName, new { @class = "form-control", required = "required", placeholder = "Enter last name" })
                        @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
                    </td>
                </tr>
                <tr>
                    <th>Email</th>
                    <td>
                        @Html.TextBoxFor(model => model.Email, new { @class = "form-control", required = "required", placeholder = "Enter email" })
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                    </td>
                </tr>
                <tr>
                    <th>Phone</th>
                    <td>
                        @Html.TextBoxFor(model => model.Phone, new { @class = "form-control", required = "required", placeholder = "Enter phone number" })
                        @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })
                    </td>
                </tr>
                <tr>
                    <th>Bond Name</th>
                    <td>
                        @Html.TextBoxFor(model => model.BondName, new { @class = "form-control", required = "required", placeholder = "Enter Bond name" })
                        @Html.ValidationMessageFor(model => model.BondName, "", new { @class = "text-danger" })
                    </td>
                </tr>
                <tr>
                    <th>Amount Invested</th>
                    <td>
                        @Html.TextBoxFor(model => model.AmountInvested, new { @class = "form-control", required = "required", placeholder = "Enter amount invested", type = "number", step = "0.01" })
                        @Html.ValidationMessageFor(model => model.AmountInvested, "", new { @class = "text-danger" })
                    </td>
                </tr>
                <tr>
                    <th>Interest</th>
                    <td>
                        @Html.TextBoxFor(model => model.InterestRate, new { @class = "form-control", required = "required", placeholder = "Enter Interest", type = "number", step = "0.01" })
                        @Html.ValidationMessageFor(model => model.InterestRate, "", new { @class = "text-danger" })
                    </td>
                </tr>
                <tr>
                    <th>Maturity Years</th>
                    <td>
                        @Html.TextBoxFor(model => model.MaturityYears, new { @class = "form-control", required = "required", placeholder = "Enter Maturity Years" })
                        @Html.ValidationMessageFor(model => model.MaturityYears, "", new { @class = "text-danger" })
                    </td>
                </tr>
                <tr>
                    <th>Created At</th>
                    <td>
                        @Html.TextBoxFor(model => model.CreatedAt, new { @class = "form-control", type = "date", placeholder = "Enter Date" })
                        @Html.ValidationMessageFor(model => model.CreatedAt, "", new { @class = "text-danger" })
                    </td>
                </tr>
                <tr>
                    <th>@ViewBag.Message</th>
                    <td>
                        <input type="submit" value="Add" class="btn btn-primary" />
                    </td>
                </tr>
            </table>
        }
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
