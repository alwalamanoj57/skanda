@model surya_banking_application_Altura_sphere.Models.StockInvestments
@{
    ViewBag.Title = "Stock Investment Application Form";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <style>
        body {
            background: url('https://static.vecteezy.com/system/resources/previews/001/925/480/non_2x/business-graph-chart-of-stock-market-investment-on-blue-background-vector.jpg') no-repeat center center fixed;
            background-size: cover; /* Cover the entire background */
            font-family: 'Arial', sans-serif;
        }

        .container {
            margin-top: 50px;
            max-width: 600px; /* Set a maximum width to make the form smaller */
            border-radius: 15px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
            background-color: white;
            transition: transform 0.3s, box-shadow 0.3s;
            padding: 20px; /* Add padding inside the container */
        }

        .container:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 40px rgba(0, 0, 0, 0.2);
        }

        h2 {
            color: #0056b3;
            animation: fadeIn 1s ease;
        }

        keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(-20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .form-group {
            margin-bottom: 15px; /* Reduced margin for form groups */
        }

        .btn-primary {
            background-color: #0056b3;
            border-color: #0056b3;
            transition: background-color 0.3s, transform 0.3s;
        }

        .btn-primary:hover {
            background-color: #004494;
            border-color: #004494;
            transform: scale(1.05);
        }

        .btn-secondary {
            background-color: #6c757d;
            border-color: #6c757d;
            transition: background-color 0.3s, transform 0.3s;
        }

        .btn-secondary:hover {
            background-color: #5a6268;
            border-color: #545b62;
            transform: scale(1.05);
        }

        .text-danger {
            font-size: 0.9rem;
        }

        .alert {
            border-radius: 8px;
            padding: 15px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
        }

        .alert-info {
            background-color: #d1ecf1;
            color: #0c5460;
        }

        .text-center {
            text-align: center;
        }
    </style>
</head>
<body>
    <div class="container">
        <h2 style="display: flex; align-items: center; justify-content: center;">
            <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQPlbbhrv4Vyrif30urzYpTvYBHX_eZuyALyw&sg" alt="Surya Banking Logo" style="height: 80px; margin-right: 10px;" />
            Surya Banking Services
        </h2>
        <h2 class="text-center">@ViewBag.Title</h2>
        <div class="card">
            <div class="card-body">
                @using (Html.BeginForm())
                {
                    <div style="padding: 20px; border: 1px solid #007bff; border-radius: 10px; background-color: #f9f9f9; margin-top: 20px;">
                        <h4>Your Stock Investment Details:</h4>
                        <p><strong>ID:</strong> <span style="color: #007bff;">@ViewBag.me</span></p>
                    </div>
                    @Html.AntiForgeryToken()
                    <div class="form-group">
                        @Html.LabelFor(model => model.StockName, new { @class = "control-label" })
                        @Html.TextBoxFor(model => model.StockName, new { @class = "form-control", @placeholder = "Enter Stock Name" })
                        @Html.ValidationMessageFor(model => model.StockName, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.FirstName, new { @class = "control-label" })
                        @Html.TextBoxFor(model => model.FirstName, new { @class = "form-control", @placeholder = "Enter First Name" })
                        @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.LastName, new { @class = "control-label" })
                        @Html.TextBoxFor(model => model.LastName, new { @class = "form-control", @placeholder = "Enter Last Name" })
                        @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Email, new { @class = "control-label" })
                        @Html.TextBoxFor(model => model.Email, new { @class = "form-control", @placeholder = "Enter Email Address" })
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Phone, new { @class = "control-label" })
                        @Html.TextBoxFor(model => model.Phone, new { @class = "form-control", @placeholder = "Enter Phone Number" })
                        @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.AmountInvested, new { @class = "control-label" })
                        @Html.TextBoxFor(model => model.AmountInvested, new { @class = "form-control", @placeholder = "Enter Amount Invested", type = "number", @min = "0" })
                        @Html.ValidationMessageFor(model => model.AmountInvested, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Shares, new { @class = "control-label" })
                        @Html.TextBoxFor(model => model.Shares, new { @class = "form-control", @placeholder = "Enter Shares" })
                        @Html.ValidationMessageFor(model => model.Shares, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.ExpectedReturn, new { @class = "control-label" })
                        @Html.TextBoxFor(model => model.ExpectedReturn, new { @class = "form-control", @placeholder = "Enter Expected Return", type = "number", @min = "0" })
                        @Html.ValidationMessageFor(model => model.ExpectedReturn, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.CreatedAt, new { @class = "control-label" })
                        @Html.TextBoxFor(model => model.CreatedAt, new { @class = "form-control", @placeholder = "Enter Application Date", type = "date" })
                        @Html.ValidationMessageFor(model => model.CreatedAt, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        @Html.HiddenFor(model => model.status, new { Value = "Application Submitted" })
                    </div>

                    <div class="alert alert-info text-center" style="margin-top: 20px;">
                        @ViewBag.Message
                    </div>
                    <div class="form-group text-center">
                        <input type="submit" value="Apply" class="btn btn-primary" />
                    </div>
                }
            </div>
            <div class="container">
                <h2 class="text-center">Check Your Stock Investment Status</h2>

                @if (TempData["Message"] != null)
                {
                    <div class="alert alert-danger text-center">
                        @TempData["Message"]
                    </div>
                }

                @using (Html.BeginForm("CheckApplicationId5", "Investment", FormMethod.Post))
                {
                    <div class="form-group">
                        <label for="Id">Enter your ID:</label>
                        <input type="number" class="form-control" id="Id" name="Id" required />
                    </div>
                    <button type="submit" class="btn btn-attractive">Check Status</button>
                }
            </div>

            <style>
                .btn-attractive {
                    background-color: #28a745; /* Green background */
                    color: white; /* White text */
                    padding: 10px 20px; /* Padding for size */
                    border-radius: 5px; /* Rounded corners */
                    border: none; /* Remove default border */
                    font-size: 16px; /* Font size */
                    font-weight: bold; /* Bold text */
                    transition: background-color 0.3s, transform 0.2s; /* Smooth transition */
                    cursor: pointer; /* Change cursor on hover */
                }

                    .btn-attractive:hover {
                        background-color: #218838; /* Darker green on hover */
                        transform: scale(1.05); /* Slightly enlarge on hover */
                    }

                    .btn-attractive:focus {
                        outline: none; /* Remove focus outline */
                        box-shadow: 0 0 5px rgba(40, 167, 69, 0.5); /* Add a glow effect */
                    }
            </style>
            <div class="form-group text-center">
                @Html.ActionLink("Back", "ViewPlans", "Home", null, new { @class = "btn btn-secondary" })
            </div>
        </div>
        </div>

    <script>
        $(document).ready(function () {
            $("form").validate(); // Enable validation
        });
    </script>
</body>
</html>
