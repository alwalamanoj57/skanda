@model surya_banking_application_Altura_sphere.Models.StockInvestments
@{
    ViewBag.Title = "ViewStatus6";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
    <link href="~/Content/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            background-color: #f0f4f8; /* Light background */
            padding: 20px;
        }

        .status-container {
            max-width: 1000px; /* Increased width for the container */
            margin: auto;
            padding: 30px;
            background-color: #ffffff;
            border-radius: 10px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        }

        h2 {
            text-align: center;
            margin-bottom: 30px;
            color: #0056b3; /* Heading color */
        }

        .status-circles {
            display: flex;
            justify-content: space-between; /* Space evenly between circles */
            align-items: center; /* Center align circles */
            margin-bottom: 30px; /* Spacing below circles */
        }

        .circle {
            position: relative;
            width: 120px; /* Circle width */
            height: 120px; /* Circle height */
            border-radius: 50%;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            font-size: 24px;
            color: white;
            margin: 0 10px; /* Spacing between circles */
            transition: background-color 0.3s; /* Smooth color change */
        }

            .circle.completed {
                background-color: #ff851b; /* Green for completed steps */
            }

            .circle.in-progress {
                background-color: #007bff; /* Blue for current step */
            }

            .circle.pending {
                background-color: #ff851b; /* Orange for pending steps */
                color: white; /* Ensure text is readable */
            }

        .step-label {
            text-align: center;
            font-weight: bold;
            color: #fff; /* White text */
            font-size: 32px; /* Larger number */
        }

        .status-text {
            text-align: center;
            font-size: 14px; /* Smaller font for status text */
            color: #fff; /* White text */
        }

        .back-button {
            text-align: center;
        }

        .btn-secondary {
            background-color: #007bff;
            border-color: #007bff;
            color: white;
            padding: 10px 20px;
            font-size: 1rem;
            border-radius: 5px;
            transition: background-color 0.3s;
        }

            .btn-secondary:hover {
                background-color: #0056b3; /* Darker blue on hover */
            }
    </style>
</head>
<body>
    <div class="status-container">
        <h2>Your Stock Investment Status</h2>


        <div class="status-circles">
            <div class="circle @(Model.status == "Application Submitted" ? "in-progress" : Model.status == "Under Review" ? "completed" : "pending")">
                <div class="step-label">1</div>
                <div class="status-text">Application Submitted</div>
            </div>
            <div class="circle @(Model.status == "Under Review" ? "in-progress" : Model.status == "Approved" ? "completed" : "pending")">
                <div class="step-label">2</div>
                <div class="status-text">Under Review</div>
            </div>
            <div class="circle @(Model.status == "Approved" ? "in-progress" : Model.status == "Rejected" ? "completed" : "pending")">
                <div class="step-label">3</div>
                <div class="status-text">Approved</div>
            </div>
            <div class="circle @(Model.status == "Rejected" ? "in-progress" : Model.status == "Pending" ? "completed" : "pending")">
                <div class="step-label">4</div>
                <div class="status-text">Rejected</div>
            </div>
            <div class="circle @(Model.status == "Pending" ? "in-progress" : Model.status == "On Hold" ? "completed" : "pending")">
                <div class="step-label">5</div>
                <div class="status-text">Pending</div>
            </div>
            <div class="circle @(Model.status == "On Hold" ? "in-progress" : Model.status == "Withdrawn " ? "completed" : "pending")">
                <div class="step-label">6</div>
                <div class="status-text">On Hold</div>
            </div>
            <div class="circle @(Model.status == "Withdrawn" ? "in-progress" : Model.status == "Closed" ? "completed" : "pending")">
                <div class="step-label">7</div>
                <div class="status-text">Withdrawn</div>
            </div>
            <div class="circle @(Model.status == "Closed" ? "in-progress" : "pending")">
                <div class="step-label">8</div>
                <div class="status-text">Closed</div>
            </div>
        </div>

        <div class="back-button">
            @Html.ActionLink("Back", "StockInvestments", "Investment", null, new { @class = "btn btn-secondary" })
        </div>
    </div>
</body>
</html>

