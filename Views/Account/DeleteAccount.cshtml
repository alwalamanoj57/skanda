@model surya_banking_application_Altura_sphere.Models.Accounts
@{
    ViewBag.Title = "Delete Account";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background: url('https://thumbs.dreamstime.com/z/account-closed-blue-background-account-closed-blue-233434498.jpg') no-repeat center center fixed;
            background-size: cover; /* Cover the entire background */
            color: #333;
            padding: 20px;
        }

        .card {
            background-color: rgba(255, 255, 255, 0.9); /* Slightly transparent white for card */
        }
    </style>
</head>
<body>
    <div class="container mt-4">
        <h2 style="display: flex; align-items: center; justify-content: center;">
            <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQPlbbhrv4Vyrif30urzYpTvYBHX_eZuyALyw&sg" alt="Surya Banking Logo" style="height: 80px; margin-right: 10px;" />
            Surya Banking Services
        </h2>
        <div class="card shadow">
            <div class="card-header text-center bg-danger text-white">
                <h5>Confirm Account Deletion</h5>
            </div>
            <div class="card-body">
                @using (Html.BeginForm())
                {
                    <p class="text-center"><strong>@ViewBag.Message</strong></p>
                    <table class="table table-striped table-bordered">
                        <tr>
                            <th>Enter your Account Id</th>
                            <td>@Html.TextBoxFor(model => model.AccountId, new { @class = "form-control" })</td>
                        </tr>
                        <tr>
                            <th>Account Number</th>
                            <td>@Html.TextBoxFor(model => model.AccountNumber, new { @class = "form-control" })</td>
                        </tr>
                        <tr>
                            <th>Email</th>
                            <td>@Html.TextBoxFor(model => model.Email, new { @class = "form-control" })</td>
                        </tr>
                        <tr>
                            <th>First Name</th>
                            <td>@Html.TextBoxFor(model => model.FirstName, new { @class = "form-control" })</td>
                        </tr>
                        <tr>
                            <th>Last Name</th>
                            <td>@Html.TextBoxFor(model => model.LastName, new { @class = "form-control" })</td>
                        </tr>
                        <tr>
                            <th>Phone Number</th>
                            <td>@Html.TextBoxFor(model => model.PhoneNumber, new { @class = "form-control" })</td>
                        </tr>
                        <tr>
                            <th>Address</th>
                            <td>@Html.TextBoxFor(model => model.Addres, new { @class = "form-control" })</td>
                        </tr>
                        <tr>
                            <th>City</th>
                            <td>@Html.TextBoxFor(model => model.City, new { @class = "form-control" })</td>
                        </tr>
                        <tr>
                            <th>State</th>
                            <td>@Html.TextBoxFor(model => model.States, new { @class = "form-control" })</td>
                        </tr>
                        <tr>
                            <th>Country</th>
                            <td>@Html.TextBoxFor(model => model.Country, new { @class = "form-control" })</td>
                        </tr>
                        <tr>
                            <th>Account Created At</th>
                            <td>@Html.TextBoxFor(model => model.CreatedAt, new { @class = "form-control" })</td>
                        </tr>
                        <tr>
                            <td colspan="2" class="text-center">
                                <input type="submit" name="B1" value="Close Account" class="btn btn-danger" />
                            </td>
                        </tr>
                    </table>
                }
            </div>
            <div class="card-footer text-center">
                <a class="btn btn-secondary" href="@Url.Action("ContentPage", "Home")">Back to Home</a>
            </div>
        </div>
    </div>

    <!-- Optional: Include Bootstrap JS for interactivity -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
</body>
</html>
