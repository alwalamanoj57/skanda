@model surya_banking_application_Altura_sphere.Models.Accounts
@{
    ViewBag.Title = "Create Account";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
    <link href="~/Content/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            background: url('https://www.shutterstock.com/image-vector/open-banking-service-api-financial-600nw-2310597571.jpg') no-repeat center center fixed;
            background-size: cover; /* Make the image cover the entire background */
            color: #333;
            padding: 20px;
        }
        .form-container {
            background-color: #ffffff;
            border-radius: 15px;
            box-shadow: 0 4px 25px rgba(0, 0, 0, 0.2);
            padding: 40px;
            max-width: 600px;
            margin: auto;
            transition: transform 0.3s;
        }

            .form-container:hover {
                transform: translateY(-5px);
            }

        h2 {
            text-align: center;
            color: #0056b3;
            margin-bottom: 30px;
            font-size: 2rem;
        }

        table {
            width: 100%;
        }

        th {
            text-align: left;
            background-color: #007bff;
            color: #ffffff;
            padding: 15px;
            border-radius: 10px 10px 0 0;
        }

        td {
            padding: 15px;
        }

        input[type="text"],
        input[type="email"],
        input[type="tel"] {
            width: 100%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
            transition: border-color 0.3s;
            margin-top: 5px;
        }

            input[type="text"]:focus,
            input[type="email"]:focus,
            input[type="tel"]:focus {
                border-color: #007bff;
                outline: none;
                box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
            }

        input[type="submit"] {
            background-color: #007bff;
            color: white;
            padding: 10px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-size: 1rem;
            margin-top: 20px;
            transition: background-color 0.3s;
            width: 100%;
            padding: 15px;
        }

            input[type="submit"]:hover {
                background-color: #0056b3;
            }

        .validation-message {
            color: red;
            font-size: 0.9rem;
            margin-top: 5px;
        }

        .message {
            color: green;
            text-align: center;
            margin-bottom: 20px;
        }

        .back-link {
            text-align: center;
            margin-top: 15px;
        }
    </style>
</head>
<body>
    <div class="form-container">
        <h2 style="display: flex; align-items: center; justify-content: center;">
            <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQPlbbhrv4Vyrif30urzYpTvYBHX_eZuyALyw&sg" alt="Surya Banking Logo" style="height: 80px; margin-right: 10px;" />
            Surya Banking Services
        </h2>
        <h2>Create Account</h2>
        <div class="message" style="text-align: center; margin-top: 20px;">
            <h3 style="color: green;">@ViewBag.Message</h3>
            <div style="padding: 20px; border: 1px solid #007bff; border-radius: 10px; background-color: #f9f9f9; margin-top: 20px;">
                <h4>Your Account Details:</h4>
                <p><strong>Account ID:</strong> <span style="color: #007bff;">@ViewBag.me</span></p>
                <p><strong>Account Number:</strong> <span style="color: #007bff;">@ViewBag.Gr</span></p>
            </div>
        </div>

        @using (Html.BeginForm())
        {
            <p class="back-link">@Html.ActionLink("Back to Home Page", "ContentPage", "Home", null, new { @class = "btn btn-secondary" })</p>
            <table>
                <tbody>
                    <tr>
                        <th>Email</th>
                        <td>
                            @Html.TextBoxFor(model => model.Email, new { @class = "form-control", @required = "required", @placeholder = "Enter your Email" })
                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "validation-message" })
                        </td>
                    </tr>
                    <tr>
                        <th>First Name</th>
                        <td>
                            @Html.TextBoxFor(model => model.FirstName, new { @class = "form-control", @required = "required", @placeholder = "Enter your First Name" })
                            @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "validation-message" })
                        </td>
                    </tr>
                    <tr>
                        <th>Last Name</th>
                        <td>
                            @Html.TextBoxFor(model => model.LastName, new { @class = "form-control", @required = "required", @placeholder = "Enter your Last Name" })
                            @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "validation-message" })
                        </td>
                    </tr>
                    <tr>
                        <th>Phone Number</th>
                        <td>
                            @Html.TextBoxFor(model => model.PhoneNumber, new { @class = "form-control", @placeholder = "Enter your Phone Number" })
                            @Html.ValidationMessageFor(model => model.PhoneNumber, "", new { @class = "validation-message" })
                        </td>
                    </tr>
                    <tr>
                        <th>Address</th>
                        <td>
                            @Html.TextBoxFor(model => model.Addres, new { @class = "form-control", @placeholder = "Enter your Address" })
                            @Html.ValidationMessageFor(model => model.Addres, "", new { @class = "validation-message" })
                        </td>
                    </tr>
                    <tr>
                        <th>City</th>
                        <td>
                            @Html.TextBoxFor(model => model.City, new { @class = "form-control", @placeholder = "Enter your City" })
                            @Html.ValidationMessageFor(model => model.City, "", new { @class = "validation-message" })
                        </td>
                    </tr>
                    <tr>
                        <th>State</th>
                        <td>
                            @Html.TextBoxFor(model => model.States, new { @class = "form-control", @placeholder = "Enter your State" })
                            @Html.ValidationMessageFor(model => model.States, "", new { @class = "validation-message" })
                        </td>
                    </tr>
                    <tr>
                        <th>Country</th>
                        <td>
                            @Html.TextBoxFor(model => model.Country, new { @class = "form-control", @placeholder = "Enter your Country" })
                            @Html.ValidationMessageFor(model => model.Country, "", new { @class = "validation-message" })
                        </td>
                    </tr>
                    <tr>
                        <th>Created At</th>
                        <td>
                            @Html.TextBoxFor(model => model.CreatedAt, new { @class = "form-control", type = "date", placeholder = "Enter Date" })
                            @Html.ValidationMessageFor(model => model.CreatedAt, "", new { @class = "text-danger" })
                        </td>
                    </tr>
                    <tr>
                        <td colspan="2">
                            <input type="submit" value="Create" />
                        </td>
                    </tr>
                </tbody>
            </table>
        }
    </div>

    @section Scripts {
        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
        <script>
            $(document).ready(function () {
                $('form').submit(function () {
                    // Custom validation logic can be added here
                    // For example, ensuring that email format is correct
                    var email = $('#Email').val();
                    var emailPattern = /^[^\s]+[^\s]+\.[^\s]+$/;
                    if (!emailPattern.test(email)) {
                        alert('Please enter a valid email address.');
                        return false; // Prevent form submission
                    }
                });
            });
        </script>
    }
</body>
</html>
